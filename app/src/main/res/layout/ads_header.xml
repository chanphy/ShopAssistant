<?xml version="1.0" encoding="utf-8"?>
<com.phy0312.shopassistant.view.FixedAspectRatioFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_banner_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:aspectRatio="3.555">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.phy0312.shopassistant.view.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="10dip" />
</com.phy0312.shopassistant.view.FixedAspectRatioFrameLayout>

