<com.phy0312.shopassistant.view.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ptl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:divider="@null"
        android:dividerHeight="0.0dip"
        android:scrollbars="none" />

    <com.phy0312.shopassistant.view.smoothprogressbar.SmoothProgressBar
        android:id="@+id/ptr_progress_up"
        style="@style/Widget.ProgressBar.PullToRefresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.phy0312.shopassistant.view.PullToRefreshLayout>