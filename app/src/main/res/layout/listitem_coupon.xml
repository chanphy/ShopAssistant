<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_listitem_coupon"
        style="@style/ListItemDefaultStyle">

        <ImageView
            android:id="@+id/iv_coupon_photo"
            style="@style/ListItemPhotoStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_description" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_alignBottom="@id/iv_coupon_photo"
            android:layout_alignTop="@id/iv_coupon_photo"
            android:layout_toRightOf="@id/iv_coupon_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_coupon_name"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:textColor="@color/c2"
                android:textSize="@dimen/h3" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv_coupon_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/tv_coupon_price"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@id/tv_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/c5"
                    android:textSize="@dimen/h5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/tv_coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:textColor="@color/c1"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/tv_coupon_count"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/c4"
                    android:textSize="@dimen/h5" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/ListItemDividerStyle" />
</LinearLayout>