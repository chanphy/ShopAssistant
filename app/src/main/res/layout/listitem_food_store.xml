<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout style="@style/ListItemDefaultStyle">

        <ImageView
            android:id="@+id/iv_store_photo"
            style="@style/ListItemPhotoStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_description" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_alignBottom="@+id/iv_store_photo"
            android:layout_alignTop="@id/iv_store_photo"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_store_photo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/listitem_store_icon_space"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/c2"
                    android:textSize="@dimen/h3" />

                <ImageView
                    android:id="@+id/iv_point_mark"
                    android:layout_width="@dimen/listitem_store_icon_point_mark_size"
                    android:layout_height="@dimen/listitem_store_icon_size"
                    android:layout_marginLeft="@dimen/listitem_store_icon_space"
                    android:background="@null"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_point_mark"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_deal"
                    android:layout_width="@dimen/listitem_store_icon_size"
                    android:layout_height="@dimen/listitem_store_icon_size"
                    android:layout_marginLeft="@dimen/listitem_store_icon_space"
                    android:background="@null"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_deal"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_activity"
                    android:layout_width="@dimen/listitem_store_icon_size"
                    android:layout_height="@dimen/listitem_store_icon_size"
                    android:layout_marginLeft="@dimen/listitem_store_icon_space"
                    android:background="@null"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_activity"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_coupon"
                    android:layout_width="@dimen/listitem_store_icon_size"
                    android:layout_height="@dimen/listitem_store_icon_size"
                    android:layout_marginLeft="@dimen/listitem_store_icon_space"
                    android:background="@null"
                    android:contentDescription="@string/image_description"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_coupon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_category"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/h5" />

                <TextView
                    android:id="@id/tv_store_number"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_weight="3.0"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:singleLine="true"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/h5" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_store_service"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/iv_reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="26.0dip"
                    android:drawableLeft="@drawable/icon_reservation"
                    android:drawablePadding="6.0dip"
                    android:text="@string/store_food_reservation"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/h5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/iv_takeout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_takeout"
                    android:drawablePadding="6.0dip"
                    android:text="@string/store_food_takeout"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/h5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_average_cost"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="1.0"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textColor="@color/c3"
                    android:textSize="@dimen/h5" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/ListItemDividerStyle" />
</LinearLayout>