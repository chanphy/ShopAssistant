<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="11dp"
    android:orientation="vertical">

    <RelativeLayout android:layout_height="40dp"
        android:layout_width="match_parent"
        android:id="@+id/rv_header_container"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_header_title"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_header_more"
            android:text="@string/more"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/listitem_main_content_bg"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_home_left"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home_left_summary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/iv_home_left_photo_tag"
                android:maxLines="2"
                android:paddingLeft="11.0dip"
                android:paddingRight="9.0dip"
                android:paddingTop="3.0dip"
                android:text="22222"
                android:textColor="@color/c2"
                android:textSize="@dimen/h4" />

            <TextView
                android:id="@+id/tv_home_left_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_home_left_summary"
                android:layout_toLeftOf="@id/iv_home_left_photo_tag"
                android:ellipsize="end"
                android:paddingLeft="11.0dip"
                android:paddingRight="9.0dip"
                android:singleLine="true"
                android:text="22222"
                android:textColor="@color/c5"
                android:textSize="@dimen/h5" />

            <ImageView
                android:id="@id/iv_home_left_photo_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/image_description"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_home_left_photo"
                android:layout_width="98.0dip"
                android:layout_height="98.0dip"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitCenter" />
        </RelativeLayout>

        <View
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="#ffeaeaea" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_home_right_top"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_home_right_top_photo"
                    android:layout_width="78.0dip"
                    android:layout_height="78.0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_home_right_top_photo_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/iv_home_right_top_photo"
                    android:layout_alignTop="@id/iv_home_right_top_photo"
                    android:contentDescription="@string/image_description"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_home_right_top_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_toLeftOf="@id/iv_home_right_top_photo"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="22222"
                    android:textColor="@color/c2"
                    android:textSize="@dimen/h4" />

                <TextView
                    android:id="@+id/tv_home_right_top_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_home_right_top_summary"
                    android:layout_alignRight="@id/tv_home_right_top_summary"
                    android:layout_below="@id/tv_home_right_top_summary"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="22222"
                    android:textColor="@color/c5"
                    android:textSize="@dimen/h5" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:background="#ffeaeaea" />

            <RelativeLayout
                android:id="@+id/ll_home_right_bottom"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_home_right_bottom_photo"
                    android:layout_width="78.0dip"
                    android:layout_height="78.0dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/iv_home_right_buttom_photo_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/iv_home_right_bottom_photo"
                    android:layout_alignTop="@id/iv_home_right_bottom_photo"
                    android:contentDescription="@string/image_description"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_home_right_bottom_summary"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="9.0dip"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginTop="3.0dip"
                    android:layout_toLeftOf="@id/iv_home_right_bottom_photo"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:text="22222"
                    android:textColor="@color/c2"
                    android:textSize="@dimen/h4" />

                <TextView
                    android:id="@+id/tv_home_right_bottom_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_home_right_bottom_summary"
                    android:layout_alignRight="@id/tv_home_right_bottom_summary"
                    android:layout_below="@id/tv_home_right_bottom_summary"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="22222"
                    android:textColor="@color/c5"
                    android:textSize="@dimen/h5" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>