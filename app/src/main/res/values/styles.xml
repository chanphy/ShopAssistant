<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/indigo_500</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/indigo_700</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/pink_a200</item>

        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="MenuIconButtonStyle">
        <item name="android:textSize">15.0dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5.0dip</item>
        <item name="android:clickable">true</item>
    </style>

    <declare-styleable name="FlowLayout">
        <attr name="android:verticalSpacing" />
        <attr name="android:horizontalSpacing" />
    </declare-styleable>
    <declare-styleable name="FixedAspectRatioFrameLayout">
        <attr name="aspectRatio" format="float" />
    </declare-styleable>

    <style name="Theme.SmoothProgressBarDefaults" parent="android:Theme">
        <item name="spbStyle">@style/SmoothProgressBar</item>
    </style>

    <style name="SmoothProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
        <item name="spb_interpolator">@integer/spb_default_interpolator</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="Widget.ProgressBar.PullToRefresh" parent="SmoothProgressBar">
        <item name="android:minHeight">4dp</item>
    </style>

    <style name="ListViewDefaultStyle">
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@drawable/default_list_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">1.0px</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="ListViewDefaultStyleWithoutDivider">
        <item name="android:fadingEdge">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:listSelector">@drawable/default_list_selector</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0.0dip</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="ListItemPhotoStyle">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/listitem_default_image_size</item>
        <item name="android:layout_height">@dimen/listitem_default_image_size</item>
        <item name="android:layout_marginRight">@dimen/listitem_photo_margin_right</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:contentDescription">@string/image_description</item>
    </style>
    <style name="ListItemDefaultStyle">
        <item name="android:background">@drawable/listitem_bg_selector</item>
        <item name="android:paddingLeft">@dimen/listitem_default_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/listitem_default_padding_vertical</item>
        <item name="android:paddingRight">@dimen/listitem_default_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/listitem_default_padding_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/listitem_default_height</item>
    </style>

    <style name="ListItemDividerStyle">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/list_divider_height</item>
    </style>

    <style name="TextViewVerticalWeightStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="DetailItemStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/detail_item_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/detail_item_padding_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/detail_item_min_height</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DetailNameStyle">
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">none</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/lightransparent</item>
        <item name="android:paddingLeft">@dimen/listitem_default_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/listitem_default_padding_horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/detail_name_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="DetailItemBackgroundStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/detail_item_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/listitem_default_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/default_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/listitem_default_padding_horizontal</item>
    </style>

    <style name="DetailTitleStyle" parent="@style/DetailItemStyle">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/c4</item>
        <item name="android:layout_height">35.0dip</item>
    </style>
    <style name="DetailContentStyle" parent="@style/DetailItemStyle">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/c3</item>
    </style>
    <style name="DetailRichContentStyle" parent="@style/DetailItemStyle">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="DetailDottedLineStyle">
        <item name="android:background">@drawable/dotted_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_marginLeft">@dimen/detail_dotted_line_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/detail_dotted_line_margin_horizontal</item>
    </style>

    <style name="DetailNoClickableItemContainerStyle" parent="@style/DetailItemStyle">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:paddingTop">17.0dip</item>
        <item name="android:paddingBottom">17.0dip</item>
        <item name="android:singleLine">false</item>
        <item name="android:lineSpacingExtra">@dimen/default_line_indicator_gap_width</item>
    </style>

    <style name="DetailClickableItemContainerStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/default_detail_clickable_item_selector</item>
        <item name="android:paddingLeft">13.0dip</item>
        <item name="android:paddingRight">13.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0dip</item>
    </style>

    <style name="DetailItemLeftStyle">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/c4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10.0dip</item>
    </style>

    <style name="DetailItemRightStyle">
        <item name="android:textSize">@dimen/h4</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="HorizontalDividerDefaultStyle">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="VerticalDividerDefaultStyle">
        <item name="android:background">@color/divider_color</item>
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="DetailBottomBarStyle">
        <item name="android:background">@color/sixty_percent_transparent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="HighLightButtonAlignParentBottomStyle" parent="@style/HighLightButtonStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginTop">3.0dip</item>
        <item name="android:layout_marginRight">@dimen/default_horizontal_margin</item>
        <item name="android:layout_marginBottom">3.0dip</item>
    </style>

    <style name="HighLightButtonStyle">
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_highlight_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
